<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <%= form_with url: movies_path, method: :get, class: "d-flex my-3" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a movie"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
      <div id="media-results">
        <% if @movies %>
          <% @movies.each do |movie| %>
            <h4><%= movie.title %></h4>
            <p><%= movie.synopsis %></p>
          <% end %>
        <% else %>
          <% @results.each do |res| %>
            <h4><%= res.searchable.title %></h4>
            <p><%= res.searchable.synopsis %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
